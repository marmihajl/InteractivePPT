<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="hr.foi.air.interactiveppt">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" />

        <activity android:name="hr.foi.air.interactiveppt.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />
        <activity android:name="hr.foi.air.interactiveppt.CreateSurvey" />
        <activity android:name="hr.foi.air.interactiveppt.GetCode" />
        <activity android:name="hr.foi.air.interactiveppt.InputCode" />
        <activity android:name="hr.foi.air.interactiveppt.qrreader.QrReader" />
        <activity android:name="hr.foi.air.interactiveppt.GetSurvey" />
        <activity android:name="hr.foi.air.interactiveppt.ViewPresentation" />
        <activity android:name="hr.foi.air.interactiveppt.PresentationList"/>
        <activity android:name="hr.foi.air.interactiveppt.SurveyList"/>
        <activity android:name="hr.foi.air.interactiveppt.Chat"/>
        <service
            android:name="hr.foi.air.interactiveppt.MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>
        <service
            android:name="hr.foi.air.interactiveppt.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
        
    </application>

</manifest>